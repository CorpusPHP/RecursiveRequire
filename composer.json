{
	"name": "corpus/recursive-require",
	"type": "library",
	"description": "Library to Recursively Require Every PHP File in a Directory Tree",
	"license": "MIT",
	"authors": [
		{
			"name": "Jesse Donat",
			"email": "donatj@gmail.com"
		}
	],
	"require": {
		"php": ">=7.1.0"
	},
	"autoload": {
		"psr-4": {
			"Corpus\\RecursiveRequire\\": "src/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "~7.5 | ~9.5",
		"squizlabs/php_codesniffer": "^3.5",
		"corpus/coding-standard": "^0.6.0",
		"friendsofphp/php-cs-fixer": "^2.17"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
