{
	"name": "corpus/recursive-require",
	"type": "library",
	"description": "Library to Recursively Require Every PHP File in a Directory Tree",
	"license": "MIT",
	"authors": [
		{
			"name": "Jesse Donat",
			"email": "donatj@gmail.com"
		}
	],
	"require": {
		"php": ">=7.4.0"
	},
	"autoload": {
		"psr-4": {
			"Corpus\\RecursiveRequire\\": "src/"
		}
	},
	"require-dev": {
		"corpus/coding-standard": "^0.9.0",
		"donatj/drop": "^1.1",
		"friendsofphp/php-cs-fixer": "^3.48",
		"phpunit/phpunit": "^9.6",
		"squizlabs/php_codesniffer": "^3.8"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	}
}
